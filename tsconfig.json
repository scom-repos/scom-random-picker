{
	"compilerOptions": {
		"target": "ES2017",
		"moduleResolution": "Node",
		"experimentalDecorators": true,
		"jsx": "preserve",
		"jsxFactory": "this.$render",
		"jsxFragmentFactory": "this.$render",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": false,
		"baseUrl": ".",
		"paths": {
			"@ijstech/components": [
				"node_modules/@ijstech/components"
			],
			"@scom-random-picker/*": [
				"src/*"
			],
		}
	},
	"include": [
		"src/*.tsx",
		"src/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}